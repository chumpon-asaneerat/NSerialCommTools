<Window x:Class="TestModbusServer.MainWindow2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestModbusServer"
        mc:Ignorable="d"
        Title="Modbus Server"
        Height="450"
        Width="800"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Modbus TCP Demo"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10" />

        <TabControl Grid.Row="1">
            <TabItem Header="Slave">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="IP:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="SlaveIpTextBox"
                                     Width="120"
                                     Text="127.0.0.1"
                                     Margin="0,0,10,0" />
                            <TextBlock Text="Port:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="SlavePortTextBox"
                                     Width="60"
                                     Text="502"
                                     Margin="0,0,10,0" />
                            <TextBlock Text="Slave ID:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="SlaveIdTextBox"
                                     Width="60"
                                     Text="1" />
                        </StackPanel>

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <Button x:Name="StartSlaveButton"
                                    Content="Start Slave"
                                    Click="StartSlaveButton_Click"
                                    Width="120"
                                    Margin="0,0,10,0" />
                            <Button x:Name="StopSlaveButton"
                                    Content="Stop Slave"
                                    Click="StopSlaveButton_Click"
                                    Width="120"
                                    IsEnabled="False" />
                        </StackPanel>

                        <TextBlock Grid.Row="2"
                                   x:Name="StatusTextBlock"
                                   Text="Status: "
                                   Margin="0,0,0,10" />
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Master">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="IP:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="MasterIpTextBox"
                                     Width="120"
                                     Text="127.0.0.1"
                                     Margin="0,0,10,0" />
                            <TextBlock Text="Port:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="MasterPortTextBox"
                                     Width="60"
                                     Text="502"
                                     Margin="0,0,10,0" />
                            <TextBlock Text="Slave ID:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <TextBox x:Name="MasterSlaveIdTextBox"
                                     Width="60"
                                     Text="1" />
                        </StackPanel>

                        <Button Grid.Row="1"
                                x:Name="ToggleMasterButton"
                                Content="Connect Master"
                                Click="ToggleMasterButton_Click"
                                Margin="0,0,0,10"
                                Width="120"
                                HorizontalAlignment="Left" />

                        <StackPanel Grid.Row="2"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <Button x:Name="ReadCoilsButton"
                                    Content="Read Coils"
                                    Click="ReadCoilsButton_Click"
                                    Width="120"
                                    Margin="0,0,10,0" />
                            <TextBlock x:Name="CoilsTextBlock"
                                       Text="Coils: "
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Row="3"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <TextBlock Text="Coil Address:"
                                       VerticalAlignment="Center"
                                       Margin="0,0,5,0" />
                            <ComboBox x:Name="CoilAddressComboBox"
                                      Width="60"
                                      Margin="0,0,10,0" />
                            <CheckBox x:Name="CoilValueCheckBox"
                                      Content="Value"
                                      VerticalAlignment="Center"
                                      Margin="0,0,10,0" />
                            <Button x:Name="WriteCoilButton"
                                    Content="Write Coil"
                                    Click="WriteCoilButton_Click"
                                    Width="120" />
                        </StackPanel>

                        <StackPanel Grid.Row="4"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <Button x:Name="MonitorCoilButton"
                                    Content="Monitor Coil"
                                    Click="MonitorCoilButton_Click"
                                    Width="120"
                                    Margin="0,0,10,0" />
                            <TextBlock x:Name="CoilValueTextBlock"
                                       Text="Coil Value: "
                                       VerticalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Grid.Row="5"
                                    Orientation="Horizontal"
                                    Margin="0,0,0,10">
                            <Button x:Name="ReadDiscreteInputsButton"
                                    Content="Read Discrete Inputs"
                                    Click="ReadDiscreteInputsButton_Click"
                                    Width="120"
                                    Margin="0,0,10,0" />
                            <TextBlock x:Name="DiscreteInputsTextBlock"
                                       Text="Discrete Inputs: "
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
