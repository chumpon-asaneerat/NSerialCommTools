<Window x:Class="NLib.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Protocol Analyzer Tool"
        Height="700"
        Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <ToolBar Grid.Row="0" Padding="5">
            <Button Name="btnNew" Content="New" Width="60" Click="btnNew_Click"/>
            <Button Name="btnOpenLog" Content="Open Log" Width="80" Click="btnOpenLog_Click"/>
            <Separator/>
            <Button Name="btnExport" Content="Export" Width="60" Click="btnExport_Click"/>
            <Separator/>
            <Button Name="btnAbout" Content="About" Width="60" Click="btnAbout_Click"/>
        </ToolBar>

        <!-- Main TabControl -->
        <TabControl Name="tabMain" Grid.Row="1" Margin="5">

            <!-- Tab 1: Input -->
            <TabItem Name="tabInput" Header="Input">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Input Mode Selection -->
                    <StackPanel Grid.Row="0" Margin="10">
                        <!-- Input Mode Radio Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Name="rbSerialPort" Content="Serial Port" GroupName="InputMode" Margin="0,0,20,0"
                                         Checked="rbSerialPort_Checked"/>
                            <RadioButton Name="rbLogFile" Content="Log File" GroupName="InputMode" IsChecked="True"
                                         Checked="rbLogFile_Checked"/>
                        </StackPanel>

                        <!-- Protocol Structure Hint (helps detection algorithm) -->
                        <GroupBox Header="Protocol Structure Hint" Padding="10,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Message Type:" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                <RadioButton Name="rbAutoDetect" Content="Auto Detect" GroupName="MessageType" IsChecked="True" Margin="0,0,15,0"/>
                                <RadioButton Name="rbSingleMessage" Content="Single Message (entire file)" GroupName="MessageType" Margin="0,0,15,0"/>
                                <RadioButton Name="rbMultiMessage" Content="Multi Message (detect frames)" GroupName="MessageType" Margin="0,0,0,0"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <!-- Log File Panel -->
                    <GroupBox Name="grpLogFile" Grid.Row="1" Header="Log File Input" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- File Selection -->
                            <Grid Grid.Row="0" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="File:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Name="txtFilePath" Grid.Column="1" IsReadOnly="True" VerticalAlignment="Center"/>
                                <Button Name="btnBrowse" Grid.Column="2" Content="Browse..." Width="80" Margin="5,0,0,0" Click="btnBrowse_Click"/>
                            </Grid>

                            <!-- Preview -->
                            <GroupBox Grid.Row="1" Header="Preview" Margin="5">
                                <TextBox Name="txtPreview" IsReadOnly="True" FontFamily="Consolas"
                                         VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                            </GroupBox>
                        </Grid>
                    </GroupBox>

                    <!-- Serial Port Panel (Hidden by default) -->
                    <GroupBox Name="grpSerialPort" Grid.Row="1" Header="Serial Port Input" Margin="10" Visibility="Collapsed">
                        <StackPanel Margin="10">
                            <TextBlock Text="Serial Port Mode - Not implemented in this version" FontStyle="Italic"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Name="btnAnalyze" Content="Analyze" Width="100" Height="30" Click="btnAnalyze_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 2: Analysis Results -->
            <TabItem Name="tabAnalysis" Header="Analysis">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Common Analysis Info -->
                    <StackPanel Grid.Row="0" Margin="10,10,10,0">
                        <GroupBox Header="Terminator Detection" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Type:" Margin="0,0,0,5"/>
                                <TextBlock Name="txtTerminatorType" Grid.Row="0" Grid.Column="1" Text="-" Margin="0,0,0,5" FontWeight="Bold"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Bytes:" Margin="0,0,0,5"/>
                                <TextBlock Name="txtTerminatorBytes" Grid.Row="1" Grid.Column="1" Text="-" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Confidence:" Margin="0,0,0,5"/>
                                <TextBlock Name="txtTerminatorConfidence" Grid.Row="2" Grid.Column="1" Text="-" Margin="0,0,0,5"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Delimiter Detection" Margin="0,0,0,10">
                            <DataGrid Name="dgDelimiters" Height="120" AutoGenerateColumns="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Delimiter" Binding="{Binding DisplayName}" Width="100"/>
                                    <DataGridTextColumn Header="Character" Binding="{Binding Character}" Width="80"/>
                                    <DataGridTextColumn Header="Occurrences" Binding="{Binding OccurrenceCount}" Width="100"/>
                                    <DataGridTextColumn Header="Structural" Binding="{Binding IsStructural}" Width="80"/>
                                    <DataGridTextColumn Header="Confidence" Binding="{Binding Confidence, StringFormat=P0}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                    </StackPanel>

                    <!-- Sub-TabControl for Raw vs Fields -->
                    <TabControl Grid.Row="1" Margin="10,0,10,10">

                        <!-- Raw Tab - Shows ALL fields including compound ones -->
                        <TabItem Header="Raw">
                            <GroupBox Header="Raw Fields Detected (All - Including Compound Fields)">
                                <DataGrid Name="dgFieldsDetectedRaw" AutoGenerateColumns="False" IsReadOnly="True" LoadingRow="DataGrid_LoadingRow">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Position" Binding="{Binding Order}" Width="60"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding DataType}" Width="80"/>
                                        <DataGridTextColumn Header="Confidence" Binding="{Binding Confidence, StringFormat=P0}" Width="80"/>
                                        <DataGridTextColumn Header="Sample Values" Binding="{Binding SampleValuesDisplay}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </TabItem>

                        <!-- Fields Tab - Shows only split/active fields -->
                        <TabItem Header="Fields">
                            <GroupBox Header="Processed Fields (Split Value+Unit Fields)">
                                <DataGrid Name="dgFieldsDetected" AutoGenerateColumns="False" IsReadOnly="True" LoadingRow="DataGrid_LoadingRow">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Position" Binding="{Binding Order}" Width="60"/>
                                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding DataType}" Width="80"/>
                                        <DataGridTextColumn Header="Confidence" Binding="{Binding Confidence, StringFormat=P0}" Width="80"/>
                                        <DataGridTextColumn Header="Sample Values" Binding="{Binding SampleValuesDisplay}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                        </TabItem>

                    </TabControl>

                    <!-- Navigation -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Name="btnNextToFieldEditor" Content="Next: Edit Fields" Width="120" Height="30" Click="btnNextToFieldEditor_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 3: Field Editor -->
            <TabItem Name="tabFieldEditor" Header="Field Editor">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Edit field names and descriptions:" Margin="10" FontSize="14"/>

                    <DataGrid Name="dgFields" Grid.Row="1" Margin="10" AutoGenerateColumns="False" CanUserAddRows="False" LoadingRow="DataGrid_LoadingRow">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Pos" Binding="{Binding Order}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding DataType}" Width="80" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Sample Values" Binding="{Binding SampleValuesDisplay}" Width="*" IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Name="btnValidateFields" Content="Validate" Width="100" Height="30" Margin="0,0,10,0" Click="btnValidateFields_Click"/>
                        <Button Name="btnNextToExport" Content="Next: Export" Width="100" Height="30" Click="btnNextToExport_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Tab 4: Export -->
            <TabItem Name="tabExport" Header="Export">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <GroupBox Grid.Row="0" Header="Device Information" Margin="10">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Device Name:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                            <TextBox Name="txtDeviceName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Output Folder:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Name="txtOutputFolder" Grid.Column="0" IsReadOnly="True"/>
                                <Button Name="btnBrowseOutput" Grid.Column="1" Content="Browse..." Width="80" Margin="5,0,0,0" Click="btnBrowseOutput_Click"/>
                            </Grid>
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Export Options" Margin="10,0,10,10">
                        <StackPanel Margin="10">
                            <CheckBox Name="chkExportJSON" Content="JSON Protocol Definition" IsChecked="True"/>
                            <CheckBox Name="chkExportReport" Content="Analysis Report" IsChecked="True" Margin="0,5,0,0"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="2" Header="Preview" Margin="10,0,10,10">
                        <TextBox Name="txtExportPreview" IsReadOnly="True" FontFamily="Consolas"
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
                    </GroupBox>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Name="btnPreviewJSON" Content="Preview JSON" Width="100" Height="30" Margin="0,0,10,0" Click="btnPreviewJSON_Click"/>
                        <Button Name="btnPerformExport" Content="Export Files" Width="100" Height="30" Click="btnPerformExport_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="txtStatus" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
