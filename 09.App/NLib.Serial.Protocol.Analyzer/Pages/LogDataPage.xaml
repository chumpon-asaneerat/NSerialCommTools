<UserControl x:Class="NLib.Serial.Protocol.Analyzer.Pages.LogDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000">
    <UserControl.Resources>
        <!-- Style for right-aligned text in DataGrid -->
        <Style x:Key="RightAlignedTextBlockStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <!-- Phase 3.1: Main Layout Structure -->

        <!-- Detection Configuration Panel (Top, 30% height) -->
        <DockPanel DockPanel.Dock="Top" Height="280" Background="#F5F5F5">
            <Border BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10">
                <StackPanel>
                    <TextBlock Text="Detection Configuration"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <!-- Phase 3.2: Detection Configuration Controls -->

                    <!-- Package Start Marker Row -->
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Package Start Marker:" Width="150" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10,0">
                            <RadioButton x:Name="StartMarkerAutoRadio" Content="Auto" GroupName="StartMarker" IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="StartMarkerManualRadio" Content="Manual" GroupName="StartMarker" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="StartMarkerNoneRadio" Content="None" GroupName="StartMarker" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        </StackPanel>
                        <TextBox x:Name="StartMarkerTextBox" Width="120" Height="22" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0,0,10,0" IsEnabled="False"/>
                        <TextBlock x:Name="StartMarkerDetectedLabel" Text="(Auto-detected: ...)" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic"/>
                    </DockPanel>

                    <!-- Package End Marker Row -->
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Package End Marker:" Width="150" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10,0">
                            <RadioButton x:Name="EndMarkerAutoRadio" Content="Auto" GroupName="EndMarker" IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="EndMarkerManualRadio" Content="Manual" GroupName="EndMarker" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="EndMarkerNoneRadio" Content="None" GroupName="EndMarker" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        </StackPanel>
                        <TextBox x:Name="EndMarkerTextBox" Width="120" Height="22" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0,0,10,0" IsEnabled="False"/>
                        <TextBlock x:Name="EndMarkerDetectedLabel" Text="(Auto-detected: ...)" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic"/>
                    </DockPanel>

                    <!-- Segment Separator Row -->
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Segment Separator:" Width="150" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10,0">
                            <RadioButton x:Name="SeparatorAutoRadio" Content="Auto" GroupName="Separator" IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="SeparatorManualRadio" Content="Manual" GroupName="Separator" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="SeparatorNoneRadio" Content="None" GroupName="Separator" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        </StackPanel>
                        <TextBox x:Name="SeparatorTextBox" Width="120" Height="22" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0,0,10,0" IsEnabled="False"/>
                        <TextBlock x:Name="SeparatorDetectedLabel" Text="(Auto-detected: ...)" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic"/>
                    </DockPanel>

                    <!-- Encoding Row -->
                    <DockPanel Margin="0,5">
                        <TextBlock Text="Encoding:" Width="150" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="10,0">
                            <RadioButton x:Name="EncodingAutoRadio" Content="Auto" GroupName="Encoding" IsChecked="True" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <RadioButton x:Name="EncodingManualRadio" Content="Manual" GroupName="Encoding" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        </StackPanel>
                        <ComboBox x:Name="EncodingComboBox" Width="120" Height="22" VerticalAlignment="Center" DockPanel.Dock="Left" Margin="0,0,10,0" IsEnabled="False">
                            <ComboBoxItem Content="ASCII" IsSelected="True"/>
                            <ComboBoxItem Content="UTF-8"/>
                            <ComboBoxItem Content="UTF-16"/>
                            <ComboBoxItem Content="Latin-1"/>
                        </ComboBox>
                        <TextBlock x:Name="EncodingDetectedLabel" Text="(Auto-detected: ...)" VerticalAlignment="Center" Foreground="Gray" FontStyle="Italic"/>
                    </DockPanel>

                    <!-- Action Buttons Row -->
                    <DockPanel Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="ApplyConfigButton" Content="Apply Configuration" Width="140" Height="28" Margin="0,0,10,0"/>
                            <Button x:Name="ClearConfigButton" Content="Clear All" Width="100" Height="28"/>
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </Border>
        </DockPanel>

        <!-- Log Data Panel (Bottom, 70% height - fills remaining space) -->
        <DockPanel Background="White">
            <Border BorderBrush="#CCCCCC" BorderThickness="0" Padding="10">
                <DockPanel>
                    <!-- Section Header -->
                    <TextBlock Text="Log Data View"
                               FontSize="14"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               DockPanel.Dock="Top"/>

                    <!-- Phase 3.3: Toolbar -->
                    <DockPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                            <Button x:Name="LoadLogFileButton" Content="Load Log File" Width="110" Height="28" Margin="0,0,10,0"/>
                            <Button x:Name="ClearLogButton" Content="Clear" Width="80" Height="28" Margin="0,0,15,0"/>
                            <TextBlock x:Name="FileInfoLabel"
                                       Text="No file loaded"
                                       VerticalAlignment="Center"
                                       Foreground="Gray"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </DockPanel>

                    <!-- Phase 3.3: DataGrid -->
                    <DataGrid x:Name="LogEntriesDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              AlternatingRowBackground="#F9F9F9"
                              BorderBrush="#CCCCCC"
                              BorderThickness="1">
                        <DataGrid.Columns>
                            <!-- Column 1: Entry Number -->
                            <DataGridTextColumn Header="#"
                                                Width="60"
                                                Binding="{Binding EntryNumber}"
                                                ElementStyle="{StaticResource RightAlignedTextBlockStyle}"/>

                            <!-- Column 2: Timestamp -->
                            <DataGridTextColumn Header="Timestamp"
                                                Width="150"
                                                Binding="{Binding Timestamp, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}"/>

                            <!-- Column 3: Direction -->
                            <DataGridTextColumn Header="Direction"
                                                Width="70"
                                                Binding="{Binding Direction}"/>

                            <!-- Column 4: RawHex -->
                            <DataGridTextColumn Header="Raw Hex"
                                                Width="*"
                                                Binding="{Binding RawHex}"/>

                            <!-- Column 5: RawText -->
                            <DataGridTextColumn Header="Raw Text"
                                                Width="*"
                                                Binding="{Binding RawText}"/>

                            <!-- Column 6: Length -->
                            <DataGridTextColumn Header="Length (Bytes)"
                                                Width="100"
                                                Binding="{Binding RawBytes.Length}"
                                                ElementStyle="{StaticResource RightAlignedTextBlockStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </DockPanel>
    </DockPanel>
</UserControl>
